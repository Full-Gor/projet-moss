{% extends 'base.html.twig' %}

{% block title %}Produits - MossAir{% endblock %}
{% block meta_description %}Découvrez notre gamme de purificateurs d'air naturels MossAir. Technologie innovante à base de mousse vivante pour un air plus pur et un environnement plus sain.{% endblock %}
{% block meta_keywords %}acheter MossAir, purificateur air mousse, produit MossAir, prix purificateur naturel{% endblock %}

{% block body %}
	<div class="product-page">
		{% if produits is empty %}
			<div class="no-products">
				<h2>Aucun produit disponible</h2>
				<p>Il n'y a actuellement aucun produit en vente.</p>
			</div>
		{% else %}
			{% for produit in produits %}
				<div class="product-container">
					<div class="product-image">
						{% if produit.image %}
							<img src="{{ asset('images/produits/' ~ produit.image) }}" alt="{{ produit.nom }}">
						{% else %}
							<img src="{{ asset('images/hero3.jpg') }}" alt="{{ produit.nom }}">
						{% endif %}
					</div>
					<div class="product-info">
						<h1>{{ produit.nom }}</h1>
						<p class="price">{{ produit.prix }}€</p>

						{# Affichage du stock disponible #}
						<div class="stock-info">
							{% if produit.stock > 0 %}
								<span class="badge-stock available">✓ En stock ({{ produit.stock }} disponible(s))</span>
							{% else %}
								<span class="badge-stock unavailable">✗ Rupture de stock</span>
							{% endif %}
						</div>

						{% if produit.description %}
							<div class="product-description">
								<p>{{ produit.description }}</p>
							</div>
						{% endif %}

						{# Formulaire d'ajout au panier #}
						<form action="{{ path('app_panier_ajouter') }}" method="POST">
							{# Input caché pour envoyer l'ID du produit #}
							<input type="hidden" name="product_id" value="{{ produit.id }}">

							<div class="quantity-selection">
								<label for="quantite-{{ produit.id }}">Quantité :</label>
								{# max = limiter la quantité au stock disponible #}
								<input type="number"
									   id="quantite-{{ produit.id }}"
									   name="quantite"
									   value="1"
									   min="1"
									   max="{{ produit.stock }}"
									   class="quantity-input"
									   {% if produit.stock == 0 %}disabled{% endif %}>
							</div>

							{# Bouton désactivé si rupture de stock #}
							<button type="submit" class="add-to-cart" {% if produit.stock == 0 %}disabled{% endif %}>
								{% if produit.stock > 0 %}
									Ajouter au panier
								{% else %}
									Produit indisponible
								{% endif %}
							</button>
						</form>
					</div>
				</div>

				<div class="product-details">
					<div class="product-characteristics">
						<h3>Caractéristiques :</h3>
						<ul>
							<li>Filtration naturelle par mousse vivante</li>
							<li>Réduction de 90% des particules fines</li>
							<li>Diminution de 60% des COV</li>
							<li>Réduction de 40% du CO2</li>
							<li>Design minimaliste et élégant</li>
							<li>Entretien minimal</li>
						</ul>
					</div>
				</div>
			{% endfor %}
		{% endif %}
	</div>

	<style>
		.product-page {
			padding: 2rem;
			max-width: 1200px;
			margin: 0 auto;
		}

		.product-container {
			display: flex;
			gap: 3rem;
			margin-bottom: 3rem;
			align-items: flex-start;
		}

		.product-image {
			flex: 1;
			max-width: 500px;
		}

		.product-image img {
			width: 100%;
			height: auto;
			border-radius: 10px;
			box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		}

		.product-info {
			flex: 1;
			padding: 1rem;
		}

		.product-info h1 {
			color: #2c5530;
			margin-bottom: 1rem;
			font-size: 2.5rem;
		}

		.price {
			font-size: 2rem;
			font-weight: bold;
			color: #4a7c59;
			margin-bottom: 1.5rem;
		}

		.product-description {
			margin-bottom: 2rem;
			line-height: 1.6;
			color: #555;
		}

		.quantity-selection {
			margin-bottom: 1.5rem;
		}

		.quantity-selection label {
			display: block;
			margin-bottom: 0.5rem;
			font-weight: 600;
			color: #333;
		}

		.quantity-input {
			width: 80px;
			padding: 0.5rem;
			border: 2px solid #ddd;
			border-radius: 5px;
			font-size: 1rem;
		}

		.add-to-cart {
			background: linear-gradient(135deg, #4a7c59, #6b8e7a);
			color: white;
			border: none;
			padding: 1rem 2rem;
			font-size: 1.1rem;
			border-radius: 25px;
			cursor: pointer;
			transition: all 0.3s ease;
			font-weight: 600;
		}

		.add-to-cart:hover {
			background: linear-gradient(135deg, #3d6b4a, #5a7a66);
			transform: translateY(-2px);
			box-shadow: 0 4px 15px rgba(74, 124, 89, 0.3);
		}

		.product-details {
			margin-top: 2rem;
			padding: 2rem;
			background: #f8f9fa;
			border-radius: 10px;
		}

		.product-characteristics h3 {
			color: #2c5530;
			margin-bottom: 1rem;
			font-size: 1.5rem;
		}

		.product-characteristics ul {
			list-style: none;
			padding: 0;
		}

		.product-characteristics li {
			padding: 0.5rem 0 0.5rem 1.5rem;
			border-bottom: 1px solid #e9ecef;
			color: #555;
			position: relative;
		}

		.product-characteristics li:before {
			content: "✓";
			color: #4a7c59;
			font-weight: bold;
			position: absolute;
			left: 0;
		}

		.no-products {
			text-align: center;
			padding: 4rem 2rem;
			color: #666;
		}

		.no-products h2 {
			color: #2c5530;
			margin-bottom: 1rem;
		}

		/* Styles pour le badge de stock */
		.stock-info {
			margin-bottom: 1.5rem;
		}

		.badge-stock {
			display: inline-block;
			padding: 0.5rem 1rem;
			border-radius: 5px;
			font-weight: 600;
			font-size: 0.9rem;
		}

		.badge-stock.available {
			background-color: #d4edda;
			color: #155724;
			border: 1px solid #c3e6cb;
		}

		.badge-stock.unavailable {
			background-color: #f8d7da;
			color: #721c24;
			border: 1px solid #f5c6cb;
		}

		/* Bouton désactivé */
		.add-to-cart:disabled {
			background: #ccc;
			cursor: not-allowed;
			opacity: 0.6;
		}

		.add-to-cart:disabled:hover {
			background: #ccc;
			transform: none;
			box-shadow: none;
		}

		@media(max-width: 768px) {
			.product-container {
				flex-direction: column;
				gap: 2rem;
			}

			.product-image {
				max-width: 100%;
			}

			.product-info h1 {
				font-size: 2rem;
			}

			.price {
				font-size: 1.5rem;
			}
		}
	</style>
{% endblock %}
