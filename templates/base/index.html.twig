{% extends 'base.html.twig' %}

{% block body %}
	<style>
		.hero-background {
			position: relative;
			width: 100vw;
			height: 100vh;
			min-height: 700px;
			overflow: hidden;
		}

		.hero-background .hero2-bg {
			position: absolute;
			top: 0;
			left: 0;
			width: 100vw;
			height: 100vh;
			object-fit: cover;
			object-position: center 30%; /* Dézoome et centre vers le haut pour voir la table */
			z-index: 1;
		}

		.hero-content {
			position: absolute;
			top: 90%; /* Descend le contenu pour être au niveau du socle */
			left: 53%; /* Déplacé de 2% vers la gauche */
			transform: translate(-50%, -50%);
			text-align: center;
			z-index: 2;
			color: white;
			text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
		}

		.hero-content h1 {
			font-size: 2.8rem;
			margin-bottom: 0.8rem;
			font-weight: bold;
		}

		.hero-content p {
			font-size: 1.1rem;
			margin-bottom: 1.5rem;
			max-width: 400px;
			color: #4a7c59;
			text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
			font-weight: 500;
		}

		/* Texte à droite séparé */
		.hero-text-right {
			position: absolute;
			top: 50%;
			right: 10%;
			transform: translateY(-50%);
			text-align: right;
			z-index: 2;
			max-width: 400px;
		}

		.hero-text-right h2 {
			font-size: 2.2rem;
			margin-bottom: 1rem;
			font-weight: bold;
			color: white;
			text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
			text-align: center;
		}

		.hero-text-right p {
			font-size: 1.3rem;
			color: white;
			text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
			font-weight: bold;
		}

		.hero-content .cta-button {
			display: inline-block;
			background: #4a7c59;
			color: white;
			padding: 1rem 2rem;
			text-decoration: none;
			border-radius: 50px;
			font-size: 1.1rem;
			transition: all 0.3s ease;
			border: 2px solid white;
		}

		.hero-content .cta-button:hover {
			background: white;
			color: #4a7c59;
			transform: translateY(-2px);
		}

		/* Overlay sombre pour améliorer la lisibilité du texte */
		.hero-background::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: rgba(0, 0, 0, 0.3);
			z-index: 1;
		}
	</style>

	<div class="hero-background">
		<img
		src="{{ asset('images/hero2.jpg?v=2') }}" alt="MossAir Background" class="hero2-bg">

		<!-- Texte à droite -->
		<div class="hero-text-right">
			<h2>MossAir</h2>
			<p>Purificateur d'air naturel révolutionnaire qui utilise la mousse vivante pour créer un environnement plus sain</p>
		</div>

		<!-- Bouton centré en bas -->
		<div class="hero-content">
			<a href="{{ path('app_histoire') }}" class="cta-button">Découvrir MossAir</a>
		</div>
	</div>
{% endblock %}
